{% extends "base.twig" %}
{% block body %}
    <body class="people">
{% endblock %}
{% block content %}
<main id="content">
      <article class="post">
        <h2 class="mt-0"><a class="category negative-gap" href="publications-working_papers.html">{{post.category.children[0]}}</a><br>{{post.post_date|date('d_m_Y')}}</h2>
        <section>
          <header>
            <h2 class="mt-0">{{post.title}}</h2>
            <h3 class="mt-0">Principal investigator</h3>
          </header>
          <section class="p-0 post-content">
            {{post.content}}
            {% if post.thumbnail %}
              <img src="{{post.thumbnail.src|resize(600)}}" alt="">
            {% endif %}
          </section>

          {% if post.tags %}
            <section class="p-0">
              <div class="hashtags">
                <nav class="nav-menu">
                  <ul class="navbar-nav">
                      {% for tag in post.tags %}
                        <li class="nav-item">
                          <a class="nav-link tags" href="{{tag.link}}">#{{tag}}</a>
                        </li>
                      {% endfor %}
                  </ul>
                </nav>
              </div>
            </section>
          {% endif %}
        </section>
      </article>

{% endblock %}
