main#content
	article.post
		h2.category.mt-0.negative-gap
			a(href="publications-working_papers.html").underline.p-relative.negative-gap !{projects[i].project[0].category}
			<br> !{projects[i].project[0].date}
		section
			header
				h2.mt-0 !{projects[i].project[0].title}
			section.p-0.post-content
				p !{projects[i].project[0].textlong}
				if projects[i].project[0].image
					img.img-fluid(src=projects[i].project[0].image)
			footer.p-0.negative-gap
				.hashtags
					nav.nav-menu
						ul.navbar-nav
							each item in projects[i].project[0].tags
								li.nav-item
									a.nav-link(href=item.link + ".html") !{item.name}
