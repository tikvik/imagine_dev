extends layout.pug
block body
	body.people
block content
	main#content
		each proj, index in projects
			if proj.project[0].category == "events"
				article
					h2.category.mt-0
						a(href="#").underline.p-relative !{proj.project[0].category} <br>
						span !{proj.project[0].date}
					section
						header
							h2.mt-0.p-relative.d-inline
								a(href="single"+ index +".html").underline !{proj.project[0].title}
						section.p-0
							p !{proj.project[0].text}
						footer.p-0
							a(href="single"+ index +".html").nav-item.d-inline.btn
								h2.d-inline &#62;	
		


